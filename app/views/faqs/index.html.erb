<% title "Faqs" %>
<div id="faq_page">

<h2>Frequently Asked Questions</h2>

<ul id="faqs">
  <% @faqs.each do |faq| %>

      <% content_tag_for :li, faq do %>
          <div id="title_<%= faq.id %>", onclick="Effect.toggle('body_<%= faq.id %>', 'blind'); return false;">
            <h3><%= faq.title %></h3>
          </div>
          <div id="body_<%= faq.id %>" class="answer" style="display:none">
            <div>
              <%= faq.body %>
            </div>
          </div>
      <% end %>
  
       
      <% if current_admin %>
          <%= link_to "Show", faq %> 
          <%= link_to "Edit", edit_faq_path(faq) %> 
          <%= link_to "Destroy", faq, :confirm => 'Are you sure?', :method => :delete %>
          <%= link_to "New Faq", new_faq_path %>
      <% end %> 

  <% end %>
</ul>


<%= sortable_element "faqs", :url => { :action => 'sort' } %>

 <%= link_to image_tag('/images/back.png'), :back %>

</div>

