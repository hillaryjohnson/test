<div id="quiz" class="span-14">


<% for question in @questions %>
<div class="question_nav"><%= will_paginate @questions %></div>
  <blockquote>
    <h2><%=h question.qbody %></h2>
      <div id="answers">
        <% form_tag({ :controller => "questions", :action => "add_to_scorecard" }) do %>
        <table>
        <%= render :partial =>  question.answers %>
        </table>
            <%= submit_tag 'submit answer' %>
   <% end %>
      </div>

  <% if current_admin %>
      <%= link_to "Edit", edit_question_path(question) %>
      <%= link_to "Destroy", question, :confirm => 'Are you sure?', :method => :delete %>
  <% end %>
 
  </blockquote>
<% end %>
<div class="question_nav"><%= will_paginate @questions %></div>
</div><!--quiz-->

<div id="scorecard" class="span-8 last">
<%= render(:partial => "scorecard", :object => @scorecard) %>
</div><!--scorecard-->

<div id="footer" class="span-24">
  

  <p><%= link_to "New Question", new_question_path if current_admin %></p>
          <div id="usernav" class="alt" >
          <% if current_admin %>
          <%= link_to "Edit Admin", edit_admin_path(:current) %>
            <%= link_to "Logout", logout_path %>
          <% else %>
           <%= link_to "Register", new_admin_path %>
           <%= link_to "Login", login_path %>
          <% end %>
          </div>
</div>




