              <strong>Truthiness:</strong> <%=h answer.truthiness %> <strong>Points:</strong> <%=h answer.points %>
              
              <% end %>


            </td>
            <td>
        
              <%= radio_button_tag :answer, answer.id, false %>
        
             
            </td>
          </tr>
  

       
      <% end %>

