          <tr>
            <td>
              <h3><%=h answer.abody %></h3>
              <p><% div_for(answer.feedback, :style => "display:none") do %>
                <%= hidden_field :question, answer.question_id, :value => answer.question_id %>
                
<%= observe_field   :question, :with => "question_id[]", 
                        :frequency  => 0.25, 
                        :url        => { }, 
                        :update     => :message     
